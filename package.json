{
  "name": "@adhamu/react-search-suggestions",
  "version": "2.2.0",
  "description": "A React input component with pluggable search suggestions.",
  "keywords": [
    "react",
    "autcomplete",
    "search",
    "suggestions",
    "typescript",
    "arrow key navigation",
    "esbuild"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/adhamu/react-search-suggestions"
  },
  "license": "MIT",
  "author": "Amit Dhamu <dev@amitd.co>",
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "npx rimraf dist",
    "build": "node esbuild/build.js",
    "postbuild": "tsc --project tsconfig.build.json",
    "predeploy": "node esbuild/dev.js",
    "deploy": "gh-pages -d public",
    "dev": "node esbuild/dev.js --watch",
    "lint": "yarn lint:scripts && yarn lint:styles",
    "lint:scripts": "eslint 'src/**/*.ts*' --ignore-path=.eslintignore --config=.eslintrc.json",
    "lint:styles": "stylelint 'src/**/*.ts*'",
    "test": "jest --colors",
    "test:coverage": "yarn test --coverage",
    "type": "tsc --noEmit"
  },
  "dependencies": {
    "@emotion/react": "^11.8.1",
    "@emotion/styled": "^11.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-string-replace": "^1.0.0"
  },
  "devDependencies": {
    "@adhamu/zero": "^3.0.1",
    "@emotion/jest": "^11.8.0",
    "@stylelint/postcss-css-in-js": "^0.37.2",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.13",
    "chokidar": "^3.5.3",
    "esbuild": "^0.14.25",
    "gh-pages": "^3.2.3",
    "jest": "^27.5.1",
    "live-server": "^1.2.1",
    "postcss-syntax": "^0.36.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
